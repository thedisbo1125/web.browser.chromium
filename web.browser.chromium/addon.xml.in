<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="web.browser.chromium"
  version="0.0.7"
  name="KODI Chromium Internet Browser"
  provider-name="Team KODI">
  <requires>
    <import addon="inputstream.adaptive" version="2.6.0" optional="true"/> <!-- About widewine and script.module.inputstreamhelper -->
    <import addon="script.module.inputstreamhelper" version="0.5.1" optional="true"/>
    @ADDON_DEPENDS@
  </requires>
  <extension
    point="kodi.web"
    library_@PLATFORM@="@LIBRARY_FILENAME@">
    <provides>webbrowser</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Internet browser based upon Google Chromium project</summary>
    <description lang="en">KODIChromiumBrowser web browser line based on the modern, cross-platform architecture provided by the Chromium project.
NOTE: This add-on is still in development and everything is currently possible (also add-on name) to become changed!</description>
    <disclaimer lang="en">This is a open source web browser handler for Google Chromium and only be possible to use on Kodi</disclaimer>
    <platform>all</platform>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
    <forum></forum>
    <website>http://esmasol.de/open-source/kodi-add-on-s/chromium-web-browser/</website>
    <email></email>
    <source>https://github.com/thedisbo1125/web.browser.chromium</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
